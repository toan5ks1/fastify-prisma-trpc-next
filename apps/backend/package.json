{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js | pino-pretty --colorize",
    "dev": "dotenv -- ts-node-dev ./src/main.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:debug": "fastify start --debug --watch",
    "start:prod": "node dist/main",
    "prisma": "dotenv -e .env prisma",
    "db:gen": "pnpm run prisma generate",
    "db:studio": "pnpm run prisma studio",
    "db:migrate": "pnpm run prisma migrate dev",
    "db:push": "pnpm run prisma db push",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@prisma/client": "^5.5.2",
    "@trpc/client": "^10.43.0",
    "@trpc/server": "^10.43.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^6.0.0",
    "env-var": "^7.4.1",
    "fastify": "^4.24.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.19.0",
    "pino-pretty": "^10.2.3",
    "superjson": "^2.2.0",
    "typescript": "^4.9.4",
    "zod": "^3.22.4"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "env": ".env"
  },
  "volta": {
    "node": "18.18.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/jest": "29.2.4",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@types/tap": "^15.0.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-custom-server": "*",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.3.2",
    "prisma": "^5.5.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "tap": "^16.3.4",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4",
    "webpack": "^5.0.0"
  }
}
